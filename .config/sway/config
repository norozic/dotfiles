bindsym $mod+Shift+r exec "$HOME/.config/mkconfig.sh && swaymsg reload"
bindsym $mod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy

input type:touchpad {
  pointer_accel 0.4
  tap enabled
  natural_scroll enabled
}

input type:keyboard {
  xkb_options ctrl:nocaps
  xkb_layout "jp,br"
  xkb_model "jp106"
}

